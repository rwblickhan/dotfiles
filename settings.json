{
  // Auto-save on focus change
  "files.autoSave": "onFocusChange",
  // Auto-format on save
  "editor.formatOnSave": true,
  // Use sticky scroll like Xcode
  "editor.stickyScroll.enabled": true,
  // Use Fira Mono
  "editor.fontFamily": "'FiraMono Nerd Font Mono', Menlo, Monaco, 'Courier New', monospace",
  // Show relative line numbers instead of absolute (like vim smartcase)
  "editor.lineNumbers": "relative",
  // Show bracket pairs for the active bracket
  "editor.guides.bracketPairs": "active",
  // Use Ayu Dark theme
  "workbench.colorTheme": "Ayu Dark Bordered",
  // Default to Prettier for JS/TS/JSON formatting
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.associations": {
    // Open CSS files in Tailwind mode
    "*.css": "tailwindcss",
    // Treat MDX files as markdown
    "*.mdx": "markdown"
  },
  // Show suggestions even in strings (e.g. for Tailwind)
  "editor.quickSuggestions": {
    "strings": true
  },
  // Go straight to first definition if there's multiple
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  // Don't bother me with confirmations all the time
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  // Don't bother me with the minimap
  "editor.minimap.enabled": false,
  // https://practicaltypography.com/ligatures-in-programming-fonts-hell-no.html
  "editor.fontLigatures": false,
  // Auto-update TypeScript imports when moving things around
  "typescript.updateImportsOnFileMove.enabled": "always",
  // Never show me node_modules
  "files.exclude": {
    "node_modules": true
  },
  // `git fetch` on open
  "git.autofetch": true,
  // Force Emmet suggestions to show up at the bottom
  "emmet.showSuggestionsAsSnippets": true,
  "editor.snippetSuggestions": "bottom",
  // Only use swiftformat and swiftlint if we have a config
  "swiftformat.onlyEnableWithConfig": true,
  "swiftlint.onlyEnableWithConfig": true,
  "swiftformat.path": ["/opt/homebrew/bin/swiftformat"],
  "swiftlint.path": ["/opt/homebrew/bin/swiftlint"],
  "lldb.library": "/Applications/Xcode-14.3.0.app/Contents/SharedFrameworks/LLDB.framework/Versions/A/LLDB",
  "lldb.launch.expressions": "native",
  // Turn off a couple annoying Markdownlint warnings
  "markdownlint.config": {
    "line-length": false,
    "single-trailing-newline": false
  },
  // Default to fish for integrated terminal
  "terminal.integrated.profiles.osx": {
    "bash": null,
    "zsh": null,
    "fish": {
      "path": "/opt/homebrew/bin/fish",
      "args": ["-l"],
      "icon": "terminal-tmux"
    }
  },
  // Send workspace folder name to integrated terminal
  "terminal.integrated.env.osx": {
    "VSCODE_WORKSPACE": "${workspaceFolderBasename}"
  },
  // In integrated terminal on Mac, use option key as meta for e.g. M-e to edit command line on fish
  "terminal.integrated.macOptionIsMeta": true,
  // VSCodeVim plugins
  "vim.camelCaseMotion.enable": true,
  "vim.highlightedyank.enable": true,
  "vim.targets.enable": true,
  "vim.sneak": true,
  "vim.sneakUseIgnorecaseAndSmartcase": true,
  "vim.showMarksInGutter": true,
  "vim.smartRelativeLine": true,
  "vim.useSystemClipboard": true
}
