{
  "files.autoSave": "onFocusChange",
  "editor.formatOnSave": true,
  "editor.stickyScroll.enabled": true,
  "editor.linkedEditing": true,
  // Use Fira Mono
  "editor.fontFamily": "'FiraMono Nerd Font Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.lineNumbers": "relative",
  "editor.guides.bracketPairs": "active",
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": "always"
  },
  "diffEditor.experimental.showMoves": true,
  "workbench.colorTheme": "Ayu Dark Bordered",
  "workbench.quickOpen.preserveInput": true,
  "workbench.tree.enableStickyScroll": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typst]": {
    "editor.defaultFormatter": "nvarner.typst-lsp"
  },
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  // Validate SCSS with stylelint
  "stylelint.validate": ["css", "scss"],
  // Enable quick suggestions in Markdown / MDX
  "[markdown]": {
    "editor.quickSuggestions": {
      "comments": true,
      "strings": true,
      "other": true
    }
  },
  "[mdx]": {
    "editor.quickSuggestions": {
      "comments": true,
      "strings": true,
      "other": true
    }
  },
  "files.associations": {
    "*.css": "css",
    "*.mdx": "mdx"
  },
  // Show suggestions even in strings and comments (e.g. for Tailwind)
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  // Go straight to first definition if there's multiple
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "editor.minimap.enabled": false,
  // https://practicaltypography.com/ligatures-in-programming-fonts-hell-no.html
  "editor.fontLigatures": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "files.exclude": {
    ".zig-cache": true,
    "node_modules": true,
    "zig-out": true
  },
  "git.autofetch": true,
  // Force Emmet suggestions to show up at the bottom
  "emmet.showSuggestionsAsSnippets": true,
  "editor.snippetSuggestions": "bottom",
  // Turn off a couple annoying Markdownlint warnings
  "markdownlint.config": {
    "line-length": false,
    "single-trailing-newline": false
  },
  "typst-lsp.experimentalFormatterMode": "on",
  // Don't export PDF via typst-lsp; use typst watch instead
  "typst-lsp.exportPdf": "never",
  "swiftformat.onlyEnableWithConfig": true,
  "swiftlint.onlyEnableWithConfig": true,
  "swiftformat.path": ["/opt/homebrew/bin/swiftformat"],
  "swiftlint.path": ["/opt/homebrew/bin/swiftlint"],
  // General lldb config (for swift lsp)
  "lldb.library": "/Applications/Xcode-15.2.0-Beta.app/Contents/SharedFrameworks/LLDB.framework/Versions/A/LLDB",
  "lldb.launch.expressions": "native",
  "deno.path": "/opt/homebrew/bin/deno",
  "vim.camelCaseMotion.enable": true,
  "vim.highlightedyank.enable": true,
  "vim.targets.enable": true,
  "vim.sneak": true,
  "vim.sneakUseIgnorecaseAndSmartcase": true,
  "vim.showMarksInGutter": true,
  "vim.smartRelativeLine": true,
  "vim.useSystemClipboard": true,
  "vim.gdefault": true,
  "vim.normalModeKeyBindings": [
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    // Zed-style keybindings
    {
      "before": ["c", "d"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["g", "s"],
      "commands": ["editor.action.referenceSearch.trigger"]
    },
    {
      "before": ["g", "/"],
      "commands": [
        "editor.action.addSelectionToNextFindMatch",
        "workbench.action.findInFiles"
      ]
    },
    {
      "before": ["g", "]"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["g", "["],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["g", "."],
      "commands": ["editor.action.quickFix"]
    },
    // Emulate vim-swap via shifter extension
    {
      "before": ["g", "<"],
      "commands": ["shiftArgumentLeft"]
    },
    {
      "before": ["g", ">"],
      "commands": ["shiftArgumentRight"]
    },
    // Call hierarchy
    {
      "before": ["g", "y"],
      "commands": ["editor.showCallHierarchy"]
    },
    // Bookmarks hotkeys
    { "before": ["m"], "commands": ["bookmarks.toggle"] },
    {
      "before": ["'"],
      "commands": ["bookmarks.list"]
    },
    {
      "before": ["\""],
      "commands": ["bookmarks.listFromAllFiles"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    }
  ],
  "vim.operatorPendingModeKeyBindings": [
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    }
  ],
  // Match <> as a pair in addition to standard pairs
  "vim.matchpairs": "(:),{:},[:],<:>",
  "vim.sneakReplacesF": true,
  "vim.replaceWithRegister": true,
  "rust-analyzer.check.command": "clippy",
  "git.enableSmartCommit": true,
  "security.promptForLocalFileProtocolHandling": false,
  "workbench.editor.empty.hint": "hidden",
  "editor.accessibilitySupport": "off",
  "git.openRepositoryInParentFolders": "always",
  "cSpell.userWords": ["descript", "testid"],
  "editor.accessibilitySupport": "off",
  "astro.content-intellisense": true,
  "zig.path": "/opt/homebrew/bin/zig",
  "git.blame.editorDecoration.enabled": true,
  "git.blame.statusBarItem.enabled": true,
  "zig.zls.enabled": "on"
}
