{
  // Auto-save on focus change
  "files.autoSave": "onFocusChange",
  // Auto-format on save
  "editor.formatOnSave": true,
  // Use Fira Mono
  "editor.fontFamily": "'FuraMono Nerd Font Mono', Menlo, Monaco, 'Courier New', monospace",
  // Use Ayu Dark
  "workbench.colorTheme": "Ayu Dark Bordered",
  // Highlight text after yanking
  "vim.highlightedyank.enable": true,
  // Use system clipboard for the unnamed (default) register
  "vim.useSystemClipboard": true,
  // Enable CamelCaseMotion.vim plugin
  "vim.camelCaseMotion.enable": true,
  // Default to Prettier for JS/TS/JSON formatting
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Open CSS files in Tailwind mode
  "files.associations": {
    "*.css": "tailwindcss"
  },
  // Show suggestions even in strings (e.g. for Tailwind)
  "editor.quickSuggestions": {
    "strings": true
  },
  // Don't bother me with confirmations all the time
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  // Don't bother me with the minimap
  "editor.minimap.enabled": false,
  // https://practicaltypography.com/ligatures-in-programming-fonts-hell-no.html
  "editor.fontLigatures": false,
  // Auto-update TypeScript imports when moving things around
  "typescript.updateImportsOnFileMove.enabled": "always",
  // Never show me node_modules
  "files.exclude": {
    "node_modules": true
  },
  // `git fetch` on open
  "git.autofetch": true,
  // Force Emmet suggestions to show up at the bottom
  "emmet.showSuggestionsAsSnippets": true,
  "editor.snippetSuggestions": "bottom",
  // Only use SwiftFormat if we have a config
  "swiftformat.onlyEnableWithConfig": true,
  // Turn off a couple annoying Markdownlint warnings
  "markdownlint.config": {
    "line-length": false,
    "single-trailing-newline": false
  },
  "lldb.library": "/Library/Developer/CommandLineTools/Library/PrivateFrameworks/LLDB.framework/Versions/A/LLDB",
  "[python]": {
    "editor.formatOnType": true
  },
  // In terminal pane, use a new tmux session named after the current directory
  "terminal.integrated.shell.osx": "/opt/homebrew/bin/tmux",
  "terminal.integrated.shellArgs.osx": [
    "new",
    "-A",
    "-t",
    "${workspaceFolderBasename}"
  ],
  // In terminal pane on Mac, use option key as meta for e.g. M-e to edit command line on fish
  "terminal.integrated.macOptionIsMeta": true
}
