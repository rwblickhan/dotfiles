{
  "files.autoSave": "onFocusChange",
  "editor.formatOnSave": true,
  "editor.stickyScroll.enabled": true,
  // Use Fira Mono
  "editor.fontFamily": "'FiraMono Nerd Font Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.lineNumbers": "relative",
  "editor.guides.bracketPairs": "active",
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": "always"
  },
  "css.enabledLanguages": ["html", "typescriptreact"],
  "diffEditor.experimental.showMoves": true,
  "workbench.colorTheme": "Ayu Dark Bordered",
  "workbench.quickOpen.preserveInput": true,
  "workbench.tree.enableStickyScroll": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typst]": {
    "editor.defaultFormatter": "nvarner.typst-lsp"
  },
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  // Enable quick suggestions in Markdown / MDX
  "[markdown]": {
    "editor.quickSuggestions": {
      "comments": true,
      "strings": true,
      "other": true
    }
  },
  "[mdx]": {
    "editor.quickSuggestions": {
      "comments": true,
      "strings": true,
      "other": true
    }
  },
  "files.associations": {
    "*.css": "css",
    "*.mdx": "mdx"
  },
  // Show suggestions even in strings and comments (e.g. for Tailwind)
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  // Go straight to first definition if there's multiple
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "editor.minimap.enabled": false,
  // https://practicaltypography.com/ligatures-in-programming-fonts-hell-no.html
  "editor.fontLigatures": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "files.exclude": {
    "node_modules": true,
    ".zig-cache": true,
    "zig-out": true,
    ".jest-cache": true
  },
  "git.autofetch": true,
  // Force Emmet suggestions to show up at the bottom
  "emmet.showSuggestionsAsSnippets": true,
  "editor.snippetSuggestions": "bottom",
  "vim.camelCaseMotion.enable": true,
  "vim.highlightedyank.enable": true,
  "vim.targets.enable": true,
  "vim.sneak": true,
  "vim.sneakUseIgnorecaseAndSmartcase": true,
  "vim.showMarksInGutter": true,
  "vim.smartRelativeLine": true,
  "vim.useSystemClipboard": true,
  "vim.gdefault": true,
  "vim.normalModeKeyBindings": [
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    // Zed-style keybindings
    {
      "before": ["c", "d"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["g", "s"],
      "commands": ["editor.action.referenceSearch.trigger"]
    },
    {
      "before": ["g", "/"],
      "commands": [
        "editor.action.addSelectionToNextFindMatch",
        "workbench.action.findInFiles"
      ]
    },
    {
      "before": ["g", "]"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["g", "["],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["g", "."],
      "commands": ["editor.action.quickFix"]
    },
    // Emulate vim-swap via shifter extension
    {
      "before": ["g", "<"],
      "commands": ["shiftArgumentLeft"]
    },
    {
      "before": ["g", ">"],
      "commands": ["shiftArgumentRight"]
    },
    // Open file on remote
    {
      "before": ["g", "o"],
      "commands": ["gitlens.openFileOnRemote"]
    },
    // Call hierarchy
    {
      "before": ["g", "y"],
      "commands": ["editor.showCallHierarchy"]
    },
    // Bookmarks hotkeys
    { "before": ["m"], "commands": ["bookmarks.toggle"] },
    {
      "before": ["'"],
      "commands": ["bookmarks.list"]
    },
    {
      "before": ["\""],
      "commands": ["bookmarks.listFromAllFiles"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    }
  ],
  "vim.operatorPendingModeKeyBindings": [
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    }
  ],
  // Match <> as a pair in addition to standard pairs
  "vim.matchpairs": "(:),{:},[:],<:>",
  "vim.sneakReplacesF": true,
  "vim.replaceWithRegister": true,
  "rust-analyzer.check.command": "clippy",
  "git.enableSmartCommit": true,
  "security.promptForLocalFileProtocolHandling": false,
  "workbench.editor.empty.hint": "hidden",
  "editor.accessibilitySupport": "off",
  "git.openRepositoryInParentFolders": "always",
  "cSpell.userWords": ["descript", "testid"],
  "git.blame.editorDecoration.enabled": true,
  "git.blame.statusBarItem.enabled": true,
  "remote.SSH.remotePlatform": {
    "coder-vscode.coder.descripthq.com--russell--rwblickhan": "linux",
    "coder-vscode.coder.descripthq.com--russell--rwblickhan--main": "linux"
  },
  "remote.SSH.connectTimeout": 1800,
  "git.confirmSync": false,
  // https://github.com/microsoft/vscode/issues/98594
  "search.followSymlinks": false,
  "search.useParentIgnoreFiles": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "svelte": false,
    "rust": false,
    "mdx": false
  },
  "Lua.workspace.library": [
    "/Users/rwblickhan/.hammerspoon/Spoons/EmmyLua.spoon/annotations"
  ],
  "svelte.enable-ts-plugin": true,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  }
}
